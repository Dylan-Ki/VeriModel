{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11",
    "VIRUSTOTAL_API_KEY": "@virustotal_api_key"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 60,
      "memory": 3008,
      "includeFiles": "verimodel/rules/**"
    }
  },
  "regions": ["sin1"],
  "github": {
    "silent": true
  }
}
