{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../web_templates",
    "distDir": "../web_templates",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "VeriModel",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:8000/**"]
      },
      "fs": {
        "all": false,
        "scope": []
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.verimodel.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "üõ°Ô∏è VeriModel - AI Supply Chain Firewall",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}

